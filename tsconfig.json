{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es7",
      "dom"
    ],
    "paths": {
      "@libusoftcicom/lc-modal": [
        "projects/lc-modal-lib/src/lc-modal"
      ],
      "@libusoftcicom/lc-modal/*": [
        "projects/lc-modal-lib/src/lib/*"
      ]
    }
  }
}
